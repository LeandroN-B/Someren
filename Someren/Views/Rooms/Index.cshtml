@model List<Someren.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Room ID</th>
            <th>Room Number</th>
            <th>Room Type</th>
            <th>Capacity</th>
            <th>Floor</th>
            <th>Building</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.RoomID</td>
                <td>@room.RoomNumber</td>
                <td>@room.RoomType</td>
                <td>@room.Capacity</td>
                <td>@room.Floor</td>
                <td>@room.Building</td>

                <!--ACTIONS (ADD, EDIT, DELETE)-->
                <td>
                    <a asp-action="Create" class="btn btn-success btn-sm">Add Room</a>
                    <a asp-action="Edit" asp-route-id="@room.RoomID" class="btn btn-primary btn-sm">Edit Room</a>
                    <a asp-action="Delete" asp-route-id="@room.RoomID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this room?');">Delete Room</a> <!-- TO PREVENT MISTAKES OF DELETEING A ROOM WITHOUT WANTING-->
                </td>
            </tr>
        }
    </tbody>
</table>
