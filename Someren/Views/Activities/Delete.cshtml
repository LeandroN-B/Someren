@model Someren.Models.Activity

@{
    ViewData["Title"] = "Delete Activity";
}

<div class="container mt-5">
    <div class="card border border-danger border-3 rounded-4">
        <div class="card-header bg-danger text-white rounded-top-4">
            <h1 class="mb-0">Delete Activity</h1>
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete this activity?</h5>
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.ActivityName</dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.ActivityDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Time</dt>
                <dd class="col-sm-9">@Model.TimeOfDay</dd>

                <dt class="col-sm-3">Duration</dt>
                <dd class="col-sm-9">@Model.DurationMinutes minutes</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ActivityID" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
