@model List<Someren.Models.Activity>

@{
    ViewData["Title"] = "Activity List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h2>Activities</h2>
        <a asp-action="Create" class="btn btn-success">Add New Activity</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-success">
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Time of Day</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Duration (min)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var activity in Model)
            {
                <tr>
                    <td>@activity.ActivityName</td>
                    <td>@activity.ActivityDate.ToString("yyyy-MM-dd")</td>
                    <td>@activity.TimeOfDay</td>
                    <td>@activity.StartTime.ToString(@"hh\:mm")</td>
                    <td>@activity.EndTime.ToString(@"hh\:mm")</td>
                    <td>@activity.DurationMinutes</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@activity.ActivityID" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@activity.ActivityID" class="btn btn-sm btn-danger">Delete</a>
                        <a asp-action="ManageSupervisors" asp-route-activityId="@activity.ActivityID" class="btn btn-sm btn-info">Supervisors</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
