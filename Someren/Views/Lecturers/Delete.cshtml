@model Someren.Models.Lecturer

@{
    ViewData["Title"] = "Delete Lecturer";
}

<h4>Delete Lecturer</h4>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="LecturerID" />

    <div class="form-group py-2">
        <label asp-for="FirstName">First Name:</label>
        <input type="text" asp-for="FirstName" class="form-control" readonly />
    </div>

    <div class="form-group py-2">
        <label asp-for="LastName">Last Name:</label>
        <input type="text" asp-for="LastName" class="form-control" readonly />
    </div>

    <div class="form-group py-2">
        <label asp-for="PhoneNumber">Phone Number:</label>
        <input type="tel" asp-for="PhoneNumber" class="form-control" readonly />
    </div>

    <div class="form-group py-2">
        <label asp-for="DateOfBirth">Date of Birth:</label>
        <input type="date" asp-for="DateOfBirth" class="form-control" />
    </div>
   
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
