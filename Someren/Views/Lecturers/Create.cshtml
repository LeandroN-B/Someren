@model Someren.Models.Lecturer

@{
    ViewData["Title"] = "Add lecturer";
}

<h4>Add Lecturer</h4>

<form asp-action="Create" method="post">
    <div class="form-group py-2">
        <label asp-for="FirstName">First Name:</label>
        <input type="text" asp-for="FirstName" class="form-control" id="LastName" required />
    </div>

    <div class="form-group py-2">
        <label asp-for="LastName">Last Name:</label>
        <select asp-for="LastName" class="form-control" id="LastName" required />
        </select>
    </div>

    <div class="form-group py-2" >
        <label asp-for="PhoneNumber">Phone Number:</label>
        <input type="number" asp-for="PhoneNumber" class="form-control" id="PhoneNumber" required />
    </div>

    <div class="form-group py-2">
        <label asp-for="DateOfBirth">Date of Birthday:</label>
        <select asp-for="DateOfBirth" class="form-control" id="PhoneNumber" required>
          </select>
    </div>


    <button type="submit" class="btn btn-primary">Add Lecturer</button>
</form>

