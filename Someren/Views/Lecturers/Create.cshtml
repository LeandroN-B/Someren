@model Someren.Models.Lecturer

@{
    ViewData["Title"] = "Add lecturer";
}

<h4>Add Lecturer</h4>

<form asp-action="Create" method="post">
    <div class="form-group py-2">
        <label asp-for="FirstName">First Name:</label>
        <input type="text" asp-for="FirstName" class="form-control" id="FirstName" required />
    </div>

    <div class="form-group py-2">
        <label asp-for="LastName">Last Name:</label>
        <input type="text" asp-for="LastName" class="form-control" id="LastName" required />
    </div>

    <div class="form-group py-2">
        <label asp-for="PhoneNumber">Phone Number:</label>
        <input type="tel" asp-for="PhoneNumber" class="form-control" id="PhoneNumber"
               pattern="^\+?[0-9\s\-]{7,15}$"
               placeholder="+1234567890"
               required />
    </div>

    <div class="form-group py-2">
        <label asp-for="DateOfBirth">Date of Birth:</label>
        <input type="date" asp-for="DateOfBirth" class="form-control" id="DateOfBirth"
               required max="@DateTime.Now.ToString("yyyy-MM-dd")" />
    </div>

    <button type="submit" class="btn btn-primary">Add Lecturer</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
