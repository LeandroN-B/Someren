@model List<Someren.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<div class="container mt-4">
    <!-- Header + Add button -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-primary">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Student
        </a>
    </div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Phone Number</th>
            <th>Class</th>
            <th>Room</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            var age = DateTime.Now.Year - student.DateOfBirth.Year;
            if (student.DateOfBirth.Date > DateTime.Now.AddYears(-age)) age--;

            <tr>
                <td>@student.StudentID</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@age</td>
                <td>@student.PhoneNumber</td>
                <td>@student.ClassName</td>
                <td>@student.RoomID</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.StudentID" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@student.StudentID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Student</a>
