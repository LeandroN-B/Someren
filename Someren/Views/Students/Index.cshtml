@model List<Someren.Models.Student>

<h2>Student List</h2>

<!-- Sort Form -->
<form method="get">
    <select name="sortBy">
        <option value="lastName" selected>Sort by Last Name</option>
        <option value="firstName">Sort by First Name</option>
    </select>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Class</th>
            <th>Room</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentID</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.PhoneNumber</td>
                <td>@student.ClassName</td>
                <td>@student.RoomID</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.StudentID" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@student.StudentID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Student</a>
