@model List<Someren.Models.Student>

<h2>Student List</h2>

<!-- Search & Filter Form -->
<form method="get">
    <input type="text" name="searchString" value="@ViewBag.CurrentFilter" placeholder="Search by name" />
    <input type="number" name="roomId" value="@ViewBag.RoomID" placeholder="Filter by Room ID" />
    <select name="sortBy">
        <option value="lastName" selected>Sort by Last Name</option>
        <option value="firstName">Sort by First Name</option>
    </select>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Class</th>
            <th>Room</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentID</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.PhoneNumber</td>
                <td>@student.ClassName</td>
                <td>@student.RoomID</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.StudentID" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@student.StudentID" class="btn btn-danger">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>

<!-- Pagination -->
<div>
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <a href="?page=@i&searchString=@ViewBag.CurrentFilter&roomId=@ViewBag.RoomID&sortBy=@ViewBag.CurrentSort"
           class="btn @(i == ViewBag.CurrentPage ? "btn-dark" : "btn-light")">
            @i
        </a>
    }
</div>

<a asp-action="Create" class="btn btn-success">Add New Student</a>
