@model Someren.Models.Student

@{
    ViewData["Title"] = "Edit Student";
    var rooms = ViewBag.AvailableRooms as List<Someren.Models.Room>;
}

<div class="container mt-5">
    <div class="card border border-primary border-3 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h1 class="mb-0">Edit Student</h1>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="StudentID" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="FirstName">First Name:</label>
                        <input type="text" asp-for="FirstName" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="LastName">Last Name:</label>
                        <input type="text" asp-for="LastName" class="form-control" required />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="PhoneNumber">Phone Number:</label>
                        <input type="tel" asp-for="PhoneNumber" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="StudentNumber">Student Number:</label>
                        <input type="text" asp-for="StudentNumber" class="form-control" required />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="ClassName">Class:</label>
                        <input asp-for="ClassName" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="RoomID">Room (Dormitory only):</label>
                        <select asp-for="RoomID" class="form-select">
                            <option value="">-- Select Room --</option>
                            @foreach (var room in rooms)
                            {
                                <option value="@room.RoomID" selected="@(room.RoomID == Model.RoomID)">
                                    Room @room.RoomNumber (Floor @room.Floor)
                                </option>
                            }
                        </select>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
