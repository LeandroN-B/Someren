@model Someren.Models.Student

@{
    ViewData["Title"] = "Edit Student";
}

<div class="container mt-5">
    <div class="card border border-primary border-3 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h1 class="mb-0">Edit Student</h1>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="StudentID" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="FirstName">First Name:</label>
                        <input asp-for="FirstName" class="form-control" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="LastName">Last Name:</label>
                        <input asp-for="LastName" class="form-control" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="StudentNumber">Student Number:</label>
                        <input asp-for="StudentNumber" class="form-control" required />
                        <span asp-validation-for="StudentNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="ClassName">Class:</label>
                        <input asp-for="ClassName" class="form-control" required />
                        <span asp-validation-for="ClassName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="PhoneNumber">Phone Number:</label>
                        <input asp-for="PhoneNumber" class="form-control" required />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Student List
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-lg"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

