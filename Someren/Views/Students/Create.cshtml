@model Someren.Models.Student

@{
    ViewData["Title"] = "Add Student";
    var rooms = ViewData["Rooms"] as List<Someren.Models.Room>;
}

<div class="container mt-5">
    <div class="card border border-success border-3 rounded-4">
        <div class="card-header bg-success text-white rounded-top-4">
            <h1 class="mb-0">Add Student</h1>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="FirstName">First Name:</label>
                        <input type="text" asp-for="FirstName" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="LastName">Last Name:</label>
                        <input type="text" asp-for="LastName" class="form-control" required />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="PhoneNumber">Phone Number:</label>
                        <input type="tel" asp-for="PhoneNumber" class="form-control" pattern="^\+?[0-9\s\-]{7,15}$" required />
                    </div>
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="StudentNumber">Student Number:</label>
                        <input type="text" asp-for="StudentNumber" class="form-control" required />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="ClassName">Class:</label>
                        <input type="text" asp-for="ClassName" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="RoomID">Room (Dormitory only):</label>
                        <select asp-for="RoomID" class="form-control">
                            <option value="">Select a room</option>
                            @if (rooms != null && rooms.Any())
                            {
                                foreach (var room in rooms)
                                {
                                    <option value="@room.RoomID">Room @room.RoomNumber (Floor @room.Floor)</option>
                                }
                            }
                            else
                            {
                                <option disabled>No dormitory rooms available</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Student List
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-plus-circle"></i> Add Student
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
