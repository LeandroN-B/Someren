@model Someren.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white rounded-top-4">
            <h1 class="mb-0">Delete Student</h1>
        </div>

        <div class="card-body">
            <p class="text-muted">Are you sure you want to delete this student? This action cannot be undone.</p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="StudentID" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="FirstName">First Name:</label>
                        <input asp-for="FirstName" class="form-control" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="LastName">Last Name:</label>
                        <input asp-for="LastName" class="form-control" readonly />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="PhoneNumber">Phone Number:</label>
                        <input asp-for="PhoneNumber" class="form-control" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="fw-bold" asp-for="ClassName">Class:</label>
                        <input asp-for="ClassName" class="form-control" readonly />
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Go Back to Student List
                    </a>
                    <button type="submit" class="btn btn-danger px-4"
                            onclick="return confirm('Are you sure you want to delete this student?');">
                        <i class="bi bi-trash"></i> Delete Student
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
