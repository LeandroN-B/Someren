@model Someren.Models.Student

<h2>Delete Student</h2>

<p>Are you sure you want to delete this student?</p>
<ul>
    <li><strong>First Name:</strong> @Model.FirstName</li>
    <li><strong>Last Name:</strong> @Model.LastName</li>
    <li><strong>PhoneNumber:</strong> @Model.PhoneNumber</li>
    <li><strong>Class:</strong> @Model.ClassName</li>
</ul>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="StudentID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
